generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// define schema
model User {
  id           Int      @id @default(autoincrement())
  username     String   @unique
  email        String   @unique
  passwordHash String   @map("password_hash") //  @map("column_name")
  createdAt    DateTime @default(now()) @map("created_at")
  
  posts        Post[] // set up a one-to-many relationship between User and Post
  
  @@map("users") // table name
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at") // @updatedAt: update at each trigger
  
  authorId  Int      @map("author_id") // foreign key
  // each post has a user | fields: foreign key | references: link author_id to refer user id
  // onDelete: when one user is deleted, its post will also be deleted
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade) 

  // speed up queries filtering by author_id
  @@index([authorId])
  // speed up queries ordering by newest posts
  @@index([createdAt(sort: Desc)])
  // table name
  @@map("posts")
}